@page
@model BookListRazor.Pages.BookList.EditModel


<h1>Edit Page</h1>

<form method="post" class="border border-right" style="padding:24px 24px">
    <div class="form-group row">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <input type="hidden" asp-for="Book.ID" class="form-control">
      
        <label for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-8">
            <input type="text" asp-for="Book.Name" class="form-control">
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="Autor" class="col-sm-2 col-form-label">Author</label>
        <div class="col-sm-8">
            <input type="text" asp-for="Book.Author" class="form-control">
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="ISBN" class="col-sm-2 col-form-label">ISBN</label>
        <div class="col-sm-8">
            <input type="text" asp-for="Book.ISBN" class="form-control">
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-3 offset-2">
            <button type="submit" class="btn btn-primary form-control">Update</button>
        </div>
        <div class="col-3">
            <a asp-page="Index" class="btn btn-info form-control">Return</a>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
